<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:weightSum="100"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Game">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="120"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="15"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/showPlayersTable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:contentDescription="@string/playerCount"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/baseline_perm_identity_white_48dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="15"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/winScoreIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:contentDescription="@string/playerCount"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/baseline_emoji_events_white_48dp"
                tools:layout_editor_absoluteX="213dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="35"
            android:paddingRight="20dp"
            android:paddingVertical="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/winScore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                tools:layout_editor_absoluteX="258dp"
                tools:text="0" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="15"
            android:padding="6dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/deathScoreIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:contentDescription="@string/playerCount"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/skull"
                tools:layout_editor_absoluteX="91dp"
                tools:layout_editor_absoluteY="8dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="25"
            android:orientation="horizontal"
            android:paddingRight="20dp"
            android:paddingVertical="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/deathScore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                tools:layout_editor_absoluteX="127dp"
                tools:text="0" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="15"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/exitGame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/baseline_exit_to_app_white_48dp"
                tools:layout_editor_absoluteX="326dp" />

        </LinearLayout>











    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="100"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:paddingLeft="10dp"
            android:weightSum="100"
            android:orientation="horizontal"
            android:gravity="left">
            <TextView
                android:id="@+id/currentPlayerText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ходит:"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="61dp" />
            <TextView
                android:id="@+id/currentPlayer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="Игрок"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="68dp"
                tools:layout_editor_absoluteY="61dp"
                tools:text="Игрок" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:paddingLeft="10dp"
            android:weightSum="120"
            android:orientation="horizontal"
            android:gravity="left">
            <TextView
                android:id="@+id/currScoreText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Счет игрока:"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="95dp"
                tools:text="Счет игрока:" />
            <TextView
                android:id="@+id/currentScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="95dp"
                tools:text="0" />
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="55"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/dice_5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="36dp"
            android:background="#00FFFFFF"
            android:backgroundTintMode="src_atop"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dice_1" />

        <ImageButton
            android:id="@+id/dice_4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="52dp"
            android:background="#00FFFFFF"
            android:backgroundTintMode="src_atop"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dice_1" />

        <ImageButton
            android:id="@+id/dice_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="128dp"
            android:layout_marginBottom="164dp"
            android:background="#00FFFFFF"
            android:backgroundTintMode="src_atop"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/dice_1" />

        <ImageButton
            android:id="@+id/dice_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="60dp"
            android:background="#00FFFFFF"
            android:backgroundTintMode="src_atop"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/dice_1" />

        <ImageButton
            android:id="@+id/dice_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="32dp"
            android:background="#00FFFFFF"
            android:backgroundTintMode="src_atop"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/dice_1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/saveScore"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:background="#12FFFFFF"
            android:text="Сохранить"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="639dp" />

        <TextView
            android:id="@+id/currentRollScore"
            android:layout_width="411dp"
            android:layout_height="48dp"
            android:text="@string/playerCount"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            tools:layout_editor_absoluteY="675dp" />

        <ImageButton
            android:id="@+id/rollTheDice"
            android:layout_width="180dp"
            android:layout_height="85dp"
            android:background="#12FFFEFE"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/dices"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="723dp" />
    </LinearLayout>


</LinearLayout>